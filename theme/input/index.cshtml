Title: Index
HeaderClass: alt
Order: 0
ArchiveSources: => GetString("PostSources")
ArchiveDestination: >
  => GetInt("Index") <= 1 ? $"index.html" : $"page/{GetInt("Index")}.html"
ArchivePageSize: 3
ArchiveOrderKey: Published
ArchiveOrderDescending: true
ArchiveTitle: => GetString("Title")
---
@{ Layout = "_layout"; }
<!-- Banner -->
<section id="banner">
    <div class="inner">
        <h2 style="padding-top:.75em"><img src="@Context.GetLink("/images/e13_white.svg")" alt="@Context.GetString("SiteTitle")" style="height:300px; width:100%"></h2>
        <p> a Blog by JJ Bussert</p>
    </div>
    <span href="#one" class="more scrolly">Recent Posts</span>

    <script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Blog",
        "url": "https://www.e13.tech",
        "name": "E13 Tech Blog",
        "description": "A collection of recent posts on technology and consulting."
    }
    </script>
</section>

<!-- Two -->
<section id="two" class="wrapper alt style2">
    @foreach (IDocument post in Document.GetChildren())
    {
    <section class="spotlight">
        <div class="image" style="height"><img src="@Context.GetLink(post.GetString("Image"))" alt="" /></div>
        <div class="content">
            <h2>@Html.DocumentLink(post)</h2>

            <p>@Html.Raw(post.GetString("Lead"))</p>
        </div>
        <script type="application/ld+json">
        {
            "@@context": "https://schema.org",
            "@@type": "BlogPosting",
            "headline": "@post.GetString("Title")",
            "description": "@post.GetString("Lead")",
            "author": {
                "@@type": "Person",
                "name": "Your Name"
            },
            "url": "@Context.GetLink(post)",
            "datePublished": "@post.GetDateTime("Published").ToString("yyyy-MM-dd")",
            "image": "@Context.GetLink(post.GetString("Image"))"
        }
        </script>
    </section>

    }
</section>

<!-- CTA -->
<section id="cta" class="wrapper style4">
    <div class="inner">

    </div>
</section>

