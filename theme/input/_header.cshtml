<h1><a href="@Context.GetLink("/")"><img src='@Context.GetLink("/images/e13_white.svg")' alt='@Context.GetString("PageTitle")' height="50"></a></h1>
<nav id="nav">
    <ul>
        <li class="special">
            <a href="#menu" class="menuToggle"><span>Menu</span></a>
            <div id="menu">
                <ul>
                    <li><a href="@Context.GetLink("/")">Home</a></li>
                    <li><a href="@Context.GetLink("/posts")">Posts</a></li>
                    <li>
                        <a href="@Context.GetLink("/tags")">Tags</a>
                        <ul style="margin-left: 16px">
                            @foreach (IDocument tag in OutputPages.Get("tags.html").GetChildren().OrderByDescending(x => x.GetChildren().Count()).Take(13))
                            {
                                string postCount = tag.GetChildren().Count().ToString();
                                <li><a role="button" href="@Context.GetLink(tag)" class="btn btn-default btn-sm"> @tag.GetTitle() (@postCount)</a></li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </li>
    </ul>
</nav>